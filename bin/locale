#!/usr/bin/env bash
#
# locale in pure bash.

locale_vars=(
    LANG
    LC_CTYPE
    LC_NUMERIC
    LC_TIME
    LC_COLLATE
    LC_MONETARY
    LC_MESSAGES
    LC_PAPER
    LC_NAME
    LC_ADDRESS
    LC_TELEPHONE
    LC_MEASUREMENT
    LC_IDENTIFICATION
    LC_ALL
)

for var in "${locale_vars[@]}"; do
    printf '%s=%s\n' "$var" "${!var:-$LANG}"
done
